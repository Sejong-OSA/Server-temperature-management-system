header
  .header__wrapper
    .header__column
      a(href=routes.home)
        i.fas.fa-desktop
        span Server Monitoring System
    .header__column
      ul.header__btns
        if !loggedUser
          if !userExisted
            li.header__btn
              a(href=routes.join) Join
          else
            li.header__btn
              a(href=routes.login) Login
        else
          li.header__btn
            a(href=`/devices${routes.register}`) Register
          li.header__btn
            a(href=routes.me) Profile
          li.header__btn
            a(href=routes.logout) Logout
